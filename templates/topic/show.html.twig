{% extends 'base.html.twig' %}

{% block title %}{{ topic.title }}{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-8">
            <h2>{{ topic.title }}</h2>
            <h5>{{ topic.rawTitle }}</h5>
            {{ include('components/carousel.html.twig') }}
        </div>
        <div class="col-sm-2">
            <h5>Options</h5>

            <form action="{{ url('topics_reload', {'topic' : topic.id }) }}" method="POST">
                <button type="submit" class="btn btn-info btn-sm btn-outline-primary">Reload</button>
            </form>

            <ul class="nav flex-column">
                <li class="nav-item"><a href="{{ url }}">Link</a></li>
            </ul>
            <br>

            <h5>Info</h5>
            <ul class="nav flex-column">
                <li class="nav-item">{{ topic.quality }}</li>
            </ul>
            <br>

            {% if related %}
            <h5>Related</h5>
            <ul class="nav flex-column">
                {% for topic in related %}
                    <li class="nav-item"><a href="{{ url('topics_show', {'topic' : topic.id}) }}">{{ topic.quality }}</a></li>
                {% endfor %}
            </ul>
            <br>
            {% endif %}

            <h5>Genres</h5>
            <ul class="nav flex-column">
                {% for genre in genres %}
                    <li class="nav-item"><a href="{{ url('genres_topics', {'genre' : genre.id}) }}">{{ genre.title }}</a></li>
                {% endfor %}
            </ul>
            <br>

            <h5>Studios</h5>
            <ul class="nav flex-column">
                {% for studio in studios %}
                    <li class="nav-item"><a href="{{ url('studios_topics', {'studio' : studio.id}) }}">{{ studio.url }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}
