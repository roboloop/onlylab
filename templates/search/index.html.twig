{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <ul>
        {% for film in films %}
            <li>
                {{ film.id }}
                <br>
                {{ film.title }}
                <br>
                <a href="{{ film.href }}">{{ film.href }}</a>
                <br>index.html.twig
                {{ film.size }}
                <br>
                {{ film.createdAt|date('d.m.Y H:i') }}
                <br>
                {{ film.site }}
                <br>
                {{ film.genre }}
                <br>
                {{ film.quality }}

                {% for pic in film.pics %}
                    <img src="{{ pic }}" alt="pic">
                {% endfor %}
            </li>
            <br>
        {% endfor %}
    </ul>

{% endblock %}
