<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="OnlyTracker\Application\CRUD\TopicCreation">
            <argument type="service" id="validator"/>
            <argument type="service" id="OnlyTracker\Infrastructure\Util\Parser\Title\TitleParserManager"/>
            <argument type="service" id="OnlyTracker\Domain\Service\GenreService"/>
            <argument type="service" id="OnlyTracker\Domain\Service\StudioService"/>
            <argument type="service" id="OnlyTracker\Domain\Service\ForumService"/>
            <argument type="service" id="OnlyTracker\Domain\Service\TopicService"/>
            <argument type="service" id="OnlyTracker\Domain\Service\ImageService"/>
            <argument type="service" id="OnlyTracker\Domain\Shared\DateTimeUtilInterface"/>
            <argument type="service" id="OnlyTracker\Domain\Repository\TopicRepositoryInterface"/>
        </service>

        <!-- Topic page handler -->
        <service id="OnlyTracker\Application\Handler\TopicPageHandler">
            <argument type="service" id="OnlyTracker\Application\CRUD\TopicCreation" />
            <argument type="service" id="OnlyTracker\Application\Parser\TopicHtmlParser" />
            <argument type="service" id="OnlyTracker\Infrastructure\Doctrine\Repository\TopicDoctrineRepository" />
        </service>
        <service id="OnlyTracker\Application\Handler\TransactionalTopicPageHandler">
            <argument type="service" id="OnlyTracker\Application\Handler\TopicPageHandler" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
        <service id="OnlyTracker\Application\Handler\TopicPageHandlerInterface" alias="OnlyTracker\Application\Handler\TransactionalTopicPageHandler" />

        <!-- Forum page handler -->
        <service id="OnlyTracker\Application\Handler\ForumPageHandler">
            <argument type="service" id="OnlyTracker\Application\CRUD\TopicCreation" />
            <argument type="service" id="OnlyTracker\Application\Parser\ForumHtmlParser" />
            <argument type="service" id="OnlyTracker\Infrastructure\Doctrine\Repository\TopicDoctrineRepository" />
        </service>
        <service id="OnlyTracker\Application\Handler\TransactionalForumPageHandler">
            <argument type="service" id="OnlyTracker\Application\Handler\ForumPageHandler" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>
        <service id="OnlyTracker\Application\Handler\ForumPageHandlerInterface" alias="OnlyTracker\Application\Handler\TransactionalForumPageHandler" />

        <!-- Normalizers -->
        <service id="OnlyTracker\Application\Normalizers\ForumNormalizer">
            <tag name="serializer.normalizer"/>
        </service>

    </services>
</container>
