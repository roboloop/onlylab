<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="proxy_topic"
           path="/proxy/topics/{id}"
           controller="OnlyTracker\BackEnd\Controller\Web\GetProxyTopicController"
           methods="GET"
    >
        <requirement key="id">^\d+</requirement>
    </route>


    <route id="main_page"
           path="/{page}"
           controller="OnlyTracker\BackEnd\Controller\Web\PageController"
           methods="GET|POST"
    >
        <requirement key="page">^(?!_wdt|_profiler|api).*</requirement>
    </route>

</routes>