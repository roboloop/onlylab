<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="genre_get" path="/genres" controller="OnlyTracker\BackEnd\Controller\Api\GenreGetController" methods="GET|POST" />
    <route id="studio_get" path="/studios" controller="OnlyTracker\BackEnd\Controller\Api\StudioGetController" methods="GET|POST" />
<!--    <route id="topic_get" path="/topics" controller="OnlyTracker\BackEnd\Controller\Api\TopicGetController" methods="GET|POST" />-->
    <route id="single_topic_get" path="/topics/{id}" controller="OnlyTracker\BackEnd\Controller\Api\SingleTopicGetController" methods="GET|POST" />
    <route id="forum_get" path="/forums" controller="OnlyTracker\BackEnd\Controller\Api\ForumGetController" methods="GET" />

    <route id="search" path="/topics" controller="OnlyTracker\BackEnd\Controller\Api\SearchTopicController" methods="GET|POST" />
    <route id="loader" path="/loader" controller="OnlyTracker\BackEnd\Controller\Api\TopicLoaderController" methods="GET|POST" />

    <route id="search_data" path="/search-data" controller="OnlyTracker\BackEnd\Controller\Api\SearchDataController" methods="GET" />


    <route id="topic_feature_reload" path="/topics/{topic}/reload" controller="OnlyTracker\BackEnd\Controller\Api\TopicFeatureController::reload" methods="POST" />

    <route id="studio_ban" path="/studios/{studio}/ban" controller="OnlyTracker\BackEnd\Controller\Api\StudioFeatureController::ban" methods="POST|GET" />
    <route id="studio_prefer" path="/studios/{studio}/prefer" controller="OnlyTracker\BackEnd\Controller\Api\StudioFeatureController::prefer" methods="POST" />
    <route id="studio_typical" path="/studios/{studio}/typical" controller="OnlyTracker\BackEnd\Controller\Api\StudioFeatureController::typical" methods="POST" />

    <route id="genre_ban" path="/genres/{genre}/ban" controller="OnlyTracker\BackEnd\Controller\Api\GenreFeatureController::ban" methods="POST" />
    <route id="genre_unban" path="/genres/{genre}/unban" controller="OnlyTracker\BackEnd\Controller\Api\GenreFeatureController::unban" methods="POST" />
</routes>
