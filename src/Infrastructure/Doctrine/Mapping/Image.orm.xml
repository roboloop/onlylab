<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Entity\Image" table="images">

        <id name="id" type="string">
            <generator strategy="NONE" />
        </id>
        <many-to-one field="topic" target-entity="App\Domain\Entity\Topic" inversed-by="images">
            <join-column nullable="false" />
        </many-to-one>
        <embedded name="format" class="App\Domain\Entity\Enum\ImageFormat" use-column-prefix="false" />
        <field name="frontUrl" type="string" length="255" />
        <field name="reference" type="string" length="255" nullable="true" />
        <field name="original" type="string" length="255" nullable="true" />
        <field name="createdAt" type="datetime_immutable" />
        <field name="isBanner" type="boolean" />

    </entity>

</doctrine-mapping>
