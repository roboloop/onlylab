<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <embeddable name="App\Domain\Entity\Embeddable\ParsedTitle">

        <field name="rawTitle" type="string" length="255" />
        <field name="title" type="string" length="255" nullable="true" />
        <field name="year" type="string" length="16" nullable="true" />
        <field name="quality" type="string" length="16" nullable="true" />

    </embeddable>
</doctrine-mapping>
