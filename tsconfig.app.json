{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "@types/tampermonkey",
      "@types/lodash",
      "@types/qbittorrent-api-v2",
      "@types/jsdom",
      "@types/file-saver",
      "@types/postcss-prefix-selector"
    ],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
